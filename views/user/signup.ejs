<% include ../partials/header %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">
    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Main CSS-->
    <link href="/stylesheets/css/main.css" rel="stylesheet" media="all">    
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>


<div class="page-wrapper bg-gra-01 p-t-180 p-b-100 font-poppins">
    <div class="wrapper wrapper--w780">
        <% if(hasError){ %>
            <div class="alert alert-danger">
                <% messages.forEach(function(errmessage){ %>
                    <p style="text-align: center;"><%= errmessage %></p>
                <% }) %>
            </div>
        <% } %>
        <div data-aos="zoom-in" class="card card-3">
            <div class="card-heading">
            </div>
            <div class="card-body">
                <h2 class="title">Register Now</h2>
                <form name="myform" action="/user/signup" method="POST">
                    <div class="input-group">
                        <input class="input--style-3" type="text" id="fullname" placeholder="Full Name *" name="fullname">
                    </div>
                    <div class="input-group">
                        <input class="input--style-3" type="email" id="email" placeholder="Email *" name="email">
                    </div>
                    <div class="input-group">
                        <input class="input--style-3" type="password" id="password" placeholder="Password *" name="password">
                    </div>
                    <div class="input-group">
                        <input class="input--style-3" type="password" class="checkbox" name="isseller" placeholder="Admin Code">
                    </div>
                    <div class="input-group">
                        <div class="g-recaptcha" data-sitekey="<%= siteKey %>" ></div>
                    </div>
                    <div class="p-t-10">
                        <button class="btn btn--pill btn--green" type="submit">Submit</button>
                    </div>
                </form>
                <p  style="padding-top: 15px;" >
                    <a style="text-decoration: none;font-size: 14px;" href="/user/signin">Already a member ? Sign in here</a>
                </p>
            </div>
        </div>
    </div>
</div>

<script src="/javascripts/aos.js"></script> 
<script>
    AOS.init();
</script>





<% include ../partials/footer %>
